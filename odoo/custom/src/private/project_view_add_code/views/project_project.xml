    <record id="view_project_project_filter" model="ir.ui.view">
        <field name="name">project.project.select</field>
        <field name="model">project.project</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="project.view_project_project_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='z_code']" position="replace">
                <field name="name" />
            </xpath>
            <!-- <field name="name" position="after">
                <field name="z_code" string="z_code" />
            </field> -->
        </field>
    </record>

    <record id="view_project_group_by_zcode" model="ir.ui.view">
        <field name="name">project.project.group</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_project_filter" />
        <field name="arch" type="xml">
         <xpath expr="//group[@name='z_code']" position="replace">
                <field name="name" />
            </xpath>
            <xpath expr="//filter[@name='z_code']" position="replace">
                <filter
                    string="Cashier"
                    name="by_name"
                    domain="[]"
                    context="{'group_by': 'z_code'}"
                />
                <field name="name" />
            </xpath>
        </field>

    </record>

